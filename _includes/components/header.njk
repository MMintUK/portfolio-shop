<header class="p--2">

	<div class="grid grid--header">

		<a href="{{ '/' | url }}" class="grid__item header-logo link-nocolor">
      {# SEO: home page header title should be inside a h1 tag #}
      {% if page.url == "/" %}
				<h1>{{ settings.metadata.site_title }}</h1>
      {% else %}
        <span>{{ settings.metadata.site_title }}</span>
      {% endif %}
		</a>

		<div class="grid__item header-nav">
			{% if settings.metadata.site_subtitle_1 %}
				<a href="https://www.instagram.com/mmint.uk" target="_blank" class="nav-link">INSTAGRAM</a>
			{% endif %}
			<a href="/shop/" class="nav-link">SHOP</a>
			<a href="/cart/" class="nav-link cart-link">
				<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="cart-icon">
					<circle cx="9" cy="21" r="1"></circle>
					<circle cx="20" cy="21" r="1"></circle>
					<path d="m1 1 4 4 16 2 2 13-17 0L5 6H2"></path>
				</svg>
				<span class="cart-text">CART (<span class="cart-count">0</span>)</span>
			</a>
		</div>

		<div class="grid__item nav-main">
			{% if settings.metadata.site_subtitle_1 %}
				<a href="https://www.instagram.com/mmint.uk" target="_blank" class="nav-link">INSTAGRAM</a>
			{% endif %}

			<a href="/shop/" class="nav-link">SHOP</a>
		</div>

		{% if settings.theme.theme_features.enable_dark_mode %}

		{% endif %}

	</div>
	